<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/head.ejs') %>
    <link rel="stylesheet" href="tasks.css">
</head>
<body>
    <%- include('./components/loading.ejs') %>
    <div class="container">
        <%- include('./components/header.ejs') %>

        <main class="main">
            <div class="main-top">
                <h2>Tasks List</h2>
                <div class="tasks-count counter">Всего активных заданий: <span class="tasks-count-value"></span></div>
            </div>
            <div class="main-btns">
                <a href="/uncompleted"><button class="second-btn btn-show-uncompleted">Показать проваленные</button></a>
                <button class="second-btn btn-create-task">+</button>
                <a href="/completed"><button class="second-btn btn-show-completed">Показать выполненные</button></a>
            </div>
            <div class="tasks-container"></div>
        </main>
    
        <%- include('./components/footer.ejs') %>

        <div class="modals-container"></div>
    </div>

    <%- include('./components/scripts.ejs') %>
    <script src="tasks.js"></script>
</body>
</html>